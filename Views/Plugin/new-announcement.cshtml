@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="ronel gonzales">
    <link rel="icon" href="../../favicon.ico">

    <title>Message of the day</title>

    <!-- Bootstrap core CSS -->

    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />



    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <style>
        body {
            padding-top: 50px;
        }

        .starter-template {
            padding: 40px 15px;
            text-align: center;
        }
    </style>
</head>

<body ng-app="app" ng-controller="announcement as ctrl" ng-cloak>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">

                <a class="navbar-brand" href="#">Message of the day </a>
            </div>

        </div>
    </nav>

    <div class="container" data-ng-init="ctrl.onInit()">

        <div class="starter-template">
            <div class="alert alert-success" role="alert" ng-show="ctrl.issave">
                Save & publish complete.
            </div>
            <div ng-hide="ctrl.issave">
                <!--message history list-->
                <div ng-show="ctrl.isViewDtl">
                    <div class="text-left">
                        <a style="cursor:pointer;" data-ng-click="ctrl.isViewDtl=false;">[New Msg]</a>
                    </div>

                    <table class="table table-hover table-striped table-condensed">
                        <tr>
                            <th>Action</th>
                            <th>Subject</th>
                            <th>Body</th>
                            <th>Msg visible(Day)</th>
                        </tr>
                        <tr data-ng-repeat="item in ctrl.msglist">
                            <td><a style="cursor:pointer;" ng-click="ctrl.onEdit(item)"><span class="glyphicon glyphicon-pencil"></span></a></td>
                            <td>{{item.subject}}</td>
                            <td>{{item.body}}</td>
                            <td>{{item.daylive}}</td>
                        </tr>
                    </table>
                </div>

                <!--Setup-->
                <form class="form-horizontal well" ng-hide="ctrl.isViewDtl">
                    <div class="text-left">
                        <a style="cursor:pointer;" data-ng-click="ctrl.isViewDtl=true;">[History]</a>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 col-md-3 control-label">Subject</label>
                        <div class="col-lg-4 col-md-3 col-sm-2">
                            <input type="text" class="form-control" data-ng-model="ctrl.frm.subject" maxlength="120" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 col-md-3 control-label">Body</label>
                        <div class="col-lg-4 col-md-3 col-sm-3">
                            <textarea rows="5" class="form-control" data-ng-model="ctrl.frm.body" required></textarea>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 col-md-3 control-label">Msg visible(Day)</label>
                        <div class="col-lg-2 col-md-2 col-sm-2">
                            <input type="number" max="500" min="1" class="form-control" data-ng-model="ctrl.frm.daylive" value="1" required>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-gradient btn-rounded" data-ng-click="ctrl.onSavePublish()">Save & Publish</button>
                    <button class="btn btn-default btn-gradient btn-rounded" data-ng-click="ctrl.onClear();">Clear</button>
                </form>
            </div>
        </div>
    </div><!-- /.container -->
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script>
        var userId = '@ViewBag.empid';
    </script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Scripts/apps/controllers/ctrl-announcement.js"></script>
</body>
</html>
